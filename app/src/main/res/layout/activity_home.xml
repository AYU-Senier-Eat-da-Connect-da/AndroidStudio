<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home.Home">

    <!-- 스크롤이 가능한 부분 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Header Layout -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/rounded_background"
                android:padding="10dp">

                <!-- 앱 이름 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="EatDa"
                    android:textSize="24sp"
                    android:textColor="@color/black"
                    android:layout_weight="1" />

                <!-- 검색창 -->
                <EditText
                    android:id="@+id/searchEditText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="20"
                    android:hint="먹고 싶은 거 검색..."
                    android:drawableRight="@android:drawable/ic_menu_search"
                    android:padding="8dp"
                    android:background="@drawable/rounded_edittext"
                    android:textColor="#000000"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp" />

            </LinearLayout>

            <!-- 가게 홍보 배너 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="#D3D3D3"
                android:layout_marginTop="10dp" />

            <!-- 지도 및 가게 찾기 버튼 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp">

                <android.widget.Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="지도찾기"
                    android:drawableLeft="@drawable/resize_map"
                    android:background="@drawable/rounded_background"
                    android:textColor="@color/black"
                    android:padding="12dp"
                    android:layout_marginRight="8dp" />

                <android.widget.Button
                    android:id="@+id/btn_findMyLocation"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="내 주변 가게 찾기"
                    android:drawableLeft="@drawable/resize_mymap"
                    android:background="@drawable/rounded_background"
                    android:textColor="@color/black"
                    android:padding="12dp" />
            </LinearLayout>

            <!-- 카테고리 선택 -->
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:rowCount="3"
                android:columnCount="4"
                android:background="@drawable/grid_border"
                android:paddingLeft="9dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

                <android.widget.Button
                    android:id="@+id/cutlet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="돈까스,회"
                    android:drawableTop="@drawable/resize_sushi"
                    android:background="@drawable/button_background"
                    android:gravity="center"
                    android:layout_margin="1dp"
                    android:padding="8dp" />

                <android.widget.Button
                    android:id="@+id/pizza"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="피자"
                    android:drawableTop="@drawable/resize_pizza"
                    android:background="@drawable/button_background"
                    android:gravity="center"
                    android:layout_margin="1dp"
                    android:padding="8dp" />

                <android.widget.Button
                    android:id="@+id/meat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="족발, 보쌈"
                    android:drawableTop="@drawable/resize_bossam"
                    android:background="@drawable/button_background"
                    android:gravity="center"
                    android:layout_margin="1dp"
                    android:padding="8dp" />

                <android.widget.Button
                    android:id="@+id/western"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="양식"
                    android:drawableTop="@drawable/resize_pasta"
                    android:background="@drawable/button_background"
                    android:gravity="center"
                    android:layout_margin="1dp"
                    android:padding="8dp" />

                <android.widget.Button
                    android:id="@+id/china"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="중식"
                    android:drawableTop="@drawable/resize_jajangmyeon"
                    android:background="@drawable/button_background"
                    android:gravity="center"
                    android:layout_margin="1dp"
                    android:padding="8dp" />

                <android.widget.Button
                    android:id="@+id/chicken"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="치킨"
                    android:drawableTop="@drawable/resize_chicken"
                    android:background="@drawable/button_background"
                    android:gravity="center"
                    android:layout_margin="1dp"
                    android:padding="8dp" />

                <android.widget.Button
                    android:id="@+id/korea"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="한식, 국"
                    android:drawableTop="@drawable/resize_korea"
                    android:background="@drawable/button_background"
                    android:gravity="center"
                    android:layout_margin="1dp"
                    android:padding="8dp" />

                <android.widget.Button
                    android:id="@+id/hamburger"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="햄버거"
                    android:drawableTop="@drawable/resize_hamburger"
                    android:background="@drawable/button_background"
                    android:gravity="center"
                    android:layout_margin="1dp"
                    android:padding="8dp" />

                <android.widget.Button
                    android:id="@+id/ricecake"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="떡볶이"
                    android:drawableTop="@drawable/resize_tteokbokki"
                    android:background="@drawable/button_background"
                    android:gravity="center"
                    android:layout_margin="1dp"
                    android:padding="8dp" />

                <android.widget.Button
                    android:id="@+id/cafe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="카페, 디저트"
                    android:drawableTop="@drawable/resize_dessert"
                    android:background="@drawable/button_background"
                    android:gravity="center"
                    android:layout_margin="1dp"
                    android:padding="8dp" />
            </GridLayout>

        </LinearLayout>

    </ScrollView>

    <!-- 하단 네비게이션 -->
    <LinearLayout
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#E0F8EC"
        android:padding="1dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_dehaze_24"
            android:background="@null"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/btn_home"
            android:layout_width="3dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:background="@null"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/resize_home" />

        <ImageButton
            android:id="@+id/btn_myPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/resize_myinformation"
            android:background="@null"
            android:layout_weight="1" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
